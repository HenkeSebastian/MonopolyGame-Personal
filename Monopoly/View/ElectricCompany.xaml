<!-- A user control used as a container for an ingame icon. (Electric company) -->
    <UserControl x:Class="Monopoly.View.ElectricCompany"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Monopoly.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Image>
        <Image.Source>
            <DrawingImage>
                <DrawingImage.Drawing>
                    <DrawingGroup>
                        <GeometryDrawing Brush="{Binding BackgroundColor, RelativeSource={RelativeSource AncestorType=UserControl}}" Geometry="{StaticResource ElectricCompanyBackground}"/>
                        <GeometryDrawing Brush="{Binding Color, RelativeSource={RelativeSource AncestorType=UserControl}}" Geometry="{StaticResource ElectricCompany}"/>
                    </DrawingGroup>
                </DrawingImage.Drawing>
            </DrawingImage>
        </Image.Source>
    </Image>
</UserControl>
